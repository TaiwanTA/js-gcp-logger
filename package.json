{
  "name": "@taiwanta/js-gcp-logger",
  "version": "0.2.1",
  "description": "Zero-config GCP logger integration with loglayer + pino",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./middleware/hono": {
      "import": "./dist/middleware/hono/index.js",
      "types": "./dist/middleware/hono/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup-node",
